<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="DBMapping.BOL" assembly="DBMapping">
  <class name="DBMapping.BOL.Contacts, DBMapping" table="contacts" lazy="false">
    <id name="ID">
      <column name="ID"/>
      <generator class="native"/>
    </id>

    <property name="CompanyName" />
    <property name="CompanyAddress" />
    <property name="CompanyContact" />
    <property name="FirstName" />
    <property name="LastName" />
    <property name="MiddleName" />
    <property name="Address" />
    <property name="Agent" />
    <property name="MobileNo" />
    <property name="PhoneNo" />
    <property name="FaxNo" />
    <property name="Description" />
    
    <!-- optional data-->
    <property name="TIN" column="tin_number" />
    <property name="BIR" column="bir_acct" />
    <property name="SEC" column="sec_acct" />
    <property name="NonVat" column="nonvat_reg" />
    <property name="Vat" column="vat_reg" />
    <property name="Type" />
  </class>
</hibernate-mapping>
